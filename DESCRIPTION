Package: ucie
Type: Package
Title: Mapping 3D Data into CIELab Color Space
Version: 1.0.0
Authors@R: 
  c(person(given = "Mikaela",
           family = "Koutrouli",
           role = c("aut", "cre"),
           email = "mikaela.koutrouli@cpr.ku.dk"
